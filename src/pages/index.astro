---
import Link from "@/components/ui/Link.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <section class="relative min-h-[calc(100dvh-64px)] pt-8 lg:pt-24">
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-500 opacity-30 blur-3xl dark:from-purple-400"
    >
    </div>
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="mb-8 text-8xl font-bold">Narek Pogosian</h1>
      <h2 class="text-balance mb-12 text-4xl font-bold">
        Lorem ipsum dolor sit, <span>Frontend Developer</span> amet consectetur
        adipisicing elit. Non, ducimus.
      </h2>
      <Link href="/" className="shadow-lg">Projects</Link>
    </div>
  </section>
</Layout>
