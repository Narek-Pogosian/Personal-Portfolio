---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const projects = await getCollection("projects");
---

<Layout title="Home">
  <div
    class="absolute -top-32 left-1/2 -z-50 hidden h-96 w-4/5 -translate-x-1/2 rounded-full bg-slate-700 opacity-25 blur-3xl dark:block lg:w-1/2"
  >
  </div>

  <section class="pt-32 lg:pt-40">
    <div class="grid gap-8 lg:grid-cols-3 lg:gap-16">
      <div class="text-center lg:col-span-2 lg:text-left">
        <h1
          class="mb-8 text-balance text-4xl font-bold sm:text-5xl lg:text-6xl"
        >
          Hi, I am Narek
        </h1>
        <p class="text-pretty text-lg leading-8">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime, ullam
          et? Perferendis animi iusto nemo consequatur voluptates ullam
          explicabo quae ab corporis, dolor magnam impedit quaerat molestias
          quos veniam? <br />
          <br /> Amet qui fugit possimus aliquid porro officia voluptatem sunt
          praesentium accusantium, optio vitae error laudantium ad consectetur
          ipsa perferendis natus cumque voluptates? Facere, voluptas quasi sit
          voluptatem ipsa excepturi voluptates. Modi rem inventore eos tenetur
          quidem neque sequi, officiis quam magnam!
        </p>
      </div>
    </div>
  </section>
  <section class="pt-32">
    <h2 class="mb-4 text-center text-3xl font-bold">Projects</h2>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <div class="card bg-element rounded-lg p-4 shadow-lg">
            <h3 class="title mb-2 text-xl font-bold">{project.data.title}</h3>
            <p class="text-muted-foreground">{project.data.description}</p>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .card {
    perspective: 400px;
  }

  .card .title {
    transform: translateZ(0);
    transition: 0.5s;
  }

  .card:hover .title {
    transform: translateZ(10px);
    scale: 1.2;
    color: red;
  }
</style>
