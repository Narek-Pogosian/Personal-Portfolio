---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"input"> {
  type?: "text" | "number" | "email" | "password" | "search";
}

const { type = "text", ...rest } = Astro.props;
---

<div
  class="relative after:absolute after:-bottom-[2px] after:left-0 after:h-[3px] after:w-full after:scale-x-0 after:bg-primary after:transition-transform after:duration-300 focus-within:after:scale-x-100"
>
  <input
    type={type}
    class="relative w-full rounded-md bg-accent p-2 font-medium text-accent-foreground outline-none transition-all duration-300 placeholder:font-normal placeholder:text-muted-foreground focus:rounded-none"
    {...rest}
  />
</div>
