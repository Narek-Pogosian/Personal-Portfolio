---
export interface Props {
  title: string;
  description: string;
  techStack?: string[];
  link: string;
}

const { description, title, techStack, link } = Astro.props;
---

<a
  href={link}
  class="cursor-pointer space-y-2 rounded-lg border border-accent bg-element p-4 shadow-md transition-shadow duration-300
  hover:shadow-xl dark:shadow-black/30"
>
  <h3 class="title text-xl font-bold">{title}</h3>
  <p class="text-muted-foreground">{description}</p>
  <div class="flex items-center justify-between">
    {
      techStack && (
        <ul class="mt-2 flex flex-wrap">
          {techStack.map((tech) => (
            <li class="mb-2 mr-2">
              <span class="rounded-md bg-accent p-1 text-xs text-element">
                {tech}
              </span>
            </li>
          ))}
        </ul>
      )
    }
  </div>
</a>
